@using System.Security.Claims

<!DOCTYPE html>

<html>
<head>
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/script.js"></script>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <section class="navbar navbar-toggleable-sm navbar-light" role="navigation">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <p class="navbar-brand">Son of Cod</p>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <navlink active-action="Index" active-controller="Home">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </navlink>
                <navlink active-action="Newsletter" active-controller="Home">
                    <a class="nav-link" asp-controller="Home" asp-action="Newsletter">Newsletter</a>
                </navlink>
               
                @if(!User.Identity.IsAuthenticated)
                {
                    <navlink active-action="Register" active-controller="Account">
                        <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                    </navlink>
                    <li active-action="Login" active-controller="Account">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">Log In</a>
                    </li>
                }
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav mr-auto custom-ul">
                    <navlink active-action="Index" active-controller="Roles">
                        <a class="nav-link" asp-action="Index" asp-controller="Roles">Manage Roles</a>
                    </navlink>
                </ul>
                <p class="nav navbar-text"> | Welcome @User.Identity.Name</p>
                @using (Html.BeginForm("LogOff", "Account"))
                {
                    <input type="submit" class="btn btn-default" value="Log out" />
                }
            }
        </div>
    </section>
        <div class="divider-line"></div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
